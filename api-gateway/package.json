{
  "name": "api-gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "swc src -s -d ./dist",
    "nest:build": "nest build",
    "start": "pnpm build && node dist/main.js",
    "gen:baseproto": "protoc -I=../protos --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_opt=returnObservable=true --ts_proto_opt=unrecognizedEnum=false --ts_proto_opt=env=node --ts_proto_opt=nestJs=true",
    "gen:product": "pnpm gen:baseproto -- --ts_proto_out=./src/product/_proto product/product.proto",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ts-coverage": "typescript-coverage-report"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.6",
    "@nestjs/common": "^7.6.9",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.9",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/microservices": "^7.6.9",
    "@nestjs/platform-express": "^7.6.9",
    "@tinyhttp/cookie-parser": "^1.1.12",
    "@tinyhttp/cors": "^1.1.2",
    "apollo-server-express": "^2.19.2",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.2",
    "grpc": "^1.24.4",
    "nestjs-pino": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.9",
    "@swc/cli": "^0.1.34",
    "@swc/core": "^1.2.47",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-rxjs": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "ts-proto": "^1.52.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "typescript-coverage-report": "^0.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm ts-coverage"
    }
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.ts": "eslint"
  },
  "typeCoverage": {
    "atLeast": 100,
    "is": 100,
    "detail": true,
    "ignoreFiles": [
      "src/**/_proto/**/*.ts"
    ],
    "project": "tsconfig.json",
    "strict": true
  }
}
